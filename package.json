{
  "name": "lucid-nuxt-2021",
  "description": "Nuxt.js Boilerplate",
  "author": "Lucid <buero@wearelucid.ch>",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "netlify": "nuxt generate --modern",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:css": "stylelint \"**/*.{vue,css,scss}\" --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:fix": "yarn lint:js --fix && yarn lint:css --fix",
    "storybook": "nuxt storybook",
    "storybook:build": "nuxt storybook build"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{vue,css,scss}": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/ufo": "^0.5.4",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "core-js": "^3.6.5",
    "graphql-tag": "^2.11.0",
    "normalize-scss": "^7.0.1",
    "nuxt": "^2.14.6",
    "nuxt-i18n": "^6.18.0",
    "sass-mq": "^5.0.1",
    "vue-link": "^1.6.1",
    "what-input": "^5.2.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nuxt/image": "^0.4.1",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/storybook": "^3.3.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fibers": "^5.0.0",
    "graphql": "^15.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "node-sass": "^5.0.0",
    "node-sass-json-importer": "^4.3.0",
    "nuxt-graphql-request": "^4.0.0",
    "prettier": "^2.1.2",
    "sass": "^1.32.7",
    "sass-loader": "10",
    "stylelint": "^13.10.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
